generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum account_status {
  active
  inactive
  archived
  suspended
}

enum users_status {
  active
  inactive
  pending
  banned
}

enum account_role {
  owner
  admin
  member
  viewer
}

enum workspace_role {
  owner
  admin
  member
  viewer
}

model accounts {
  id         String         @id @default(uuid())
  name       String         @default("Default Account")
  status     account_status @default(inactive)
  created_at DateTime       @default(now())
  updated_at DateTime       @updatedAt

  users_and_accounts users_and_accounts[]
  workspaces         workspaces[]

  @@index([name])
  @@index([status])
}

model users {
  id         String       @id @default(cuid())
  status     users_status @default(pending)
  email      String       @unique
  first_name String?      @default("")
  last_name  String?      @default("")
  password   String?
  provider   String?      @default("email")
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt

  users_and_accounts users_and_accounts[]

  @@index([email])
  @@index([status])
  @@index([provider])
  @@index([first_name])
  @@index([last_name])
}

model users_and_accounts {
  id         String       @id @default(cuid())
  role       account_role @default(admin)
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt

  account_id String
  account    accounts @relation(fields: [account_id], references: [id])
  user_id    String
  user       users    @relation(fields: [user_id], references: [id])

  @@unique([account_id, user_id])
  @@index([account_id])
  @@index([user_id])
  @@index([role])
}

model workspaces {
  id         String    @id @default(cuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  account    accounts? @relation(fields: [account_id], references: [id], onDelete: Cascade)
  account_id String?

  notes  notes[]
  bikes  bikes[]
  skuses skus[]
  scraps scraps[]

  @@index([name])
}

model notes {
  id         String   @id @default(cuid())
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  workspace    workspaces? @relation(fields: [workspace_id], references: [id], onDelete: Cascade)
  workspace_id String?

  @@index([title])
}

model bikes {
  id            String   @id @default(cuid())
  name          String?  @default("")
  source        String?  @default("")
  description   String?  @default("")
  in_stock      Boolean? @default(false)
  product_image String?  @default("")
  record_url    String?  @default("")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  workspace    workspaces? @relation(fields: [workspace_id], references: [id], onDelete: Cascade)
  workspace_id String?

  skus skus[]

  @@index([name])
}

model skus {
  id                    String  @id @default(cuid())
  name                  String  @default("")
  source                String  @default("")
  brand                 String  @default("")
  product_type          String  @default("")
  quantity              Int     @default(0)
  size                  String  @default("")
  wheel_size_front      String  @default("")
  wheel_size_rear       String  @default("")
  normal_price          Float   @default(0)
  consumer_price        Float   @default(0)
  dealer_price          Float   @default(0)
  profit_margin         Float   @default(0)
  profit_margin_percent Float   @default(0)
  in_stock              Boolean @default(false)
  item_group_name       String  @default("")
  item_number           String  @default("")
  level                 String  @default("")
  model                 String  @default("")
  model_series_name     String  @default("")
  model_year            String  @default("")
  record_url            String? @default("")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  bike    bikes?  @relation(fields: [bike_id], references: [id], onDelete: Cascade)
  bike_id String?

  workspace    workspaces? @relation(fields: [workspace_id], references: [id], onDelete: Cascade)
  workspace_id String?

  @@index([name])
  @@index([brand])
  @@index([item_number])
}

model scraps {
  id         String   @id @default(cuid())
  name       String   @default("")
  status     String   @default("pending")
  result     Json?    @default("{}")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  workspace    workspaces? @relation(fields: [workspace_id], references: [id], onDelete: Cascade)
  workspace_id String?

  @@index([name])
}
